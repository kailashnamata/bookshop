<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">
  <Dialog
    id="dialog"
    title="{/bookData/title}" type="Standard">
      <content>
        <Text text="{/bookData/description}"/>
      </content>
      <beginButton>
        <Button
          text="Close"
          press=".onCloseBookDetailDialog"/>
      </beginButton>
  </Dialog>
</core:FragmentDefinition>